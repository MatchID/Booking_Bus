<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gambar"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/gambar"
            android:text="An M. Ebni Hannibal"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/norek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nama"
            android:layout_below="@+id/nama"
            android:text="113-00-1008439-4"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tot"
            android:src="@drawable/mandiri2"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>
