<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="85dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="14dp"
        android:layout_height="38dp" >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="289dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="183dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/namabus"
            android:layout_below="@+id/namabus"
            android:paddingBottom="2dip"
            android:text="Tanggal"
            android:textColor="#666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/idjadwal"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />

        <TextView
            android:id="@+id/namabus"
            android:layout_width="183dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="2dip"
            android:text="Bus"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/judul"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/judul"
            android:text="Harga"
            android:gravity="right" />

        <TextView
            android:id="@+id/jamtampil"
            android:layout_width="183dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/namabus"
            android:layout_toRightOf="@+id/tanggal"
            android:paddingBottom="2dip"
            android:text="Jam"
            android:textColor="#666666"
            android:textSize="13sp" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:id="@+id/asal"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/tujuan"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/hari"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/jam"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/jumlah"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/kodebus"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/tanggala"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/max"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/kursi"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />
        <TextView
            android:id="@+id/harga"
            android:layout_width="220dp"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="#D7DEF0"
            android:textSize="0.5sp" />

    </RelativeLayout>

</LinearLayout>